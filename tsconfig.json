{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["node", "wilson/client", "vite/client"]
  },
  "include": ["./src"]
}
